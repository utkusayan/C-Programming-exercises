#include <stdio.h>
#include <stdlib.h>

int main()
{
    int saniye;
    printf("Sureyi giriniz (saniye olarak)=");
    scanf("%d",&saniye);
    printf("-------------------------------\n");
    int saat;
    int dakika;
    saat=saniye/3600;
    dakika=(saniye-saat*3600)/60;
    printf("Bu sure %d saat,%d dakika,%d saniye eder.",saniye/3600,dakika,saniye-saat*3600-dakika*60);
    return 0;
}
